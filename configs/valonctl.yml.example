# VALON Control Configuration
# This file configures valonctl for managing VALON peers

wireguard:
  # WireGuard interface name to manage
  interface: wg0
  
  # Discovery Role's WireGuard IP address
  ip: 100.100.0.1
  
  # Discovery Role's public endpoint (LAN IP:port or public IP:port)
  # This will be provided to clients for initial connection
  endpoint: 192.168.1.100:51820
  
  # WireGuard network CIDR for IP auto-allocation
  # IPs will be automatically assigned from this range
  network: 100.100.0.0/24
  
  # DNS zone for VALON network
  # Used for split-DNS configuration in client WireGuard configs
  dns_zone: valon.internal

etcd:
  # etcd endpoints for peer registry
  endpoints:
    - https://localhost:2379
  
  # Optional TLS configuration for etcd
  # tls:
  #   ca_cert: /path/to/ca.crt
  #   client_cert: /path/to/client.crt
  #   client_key: /path/to/client.key

ddns:
  # CoreDNS DDNS API endpoint for health checks
  api_url: http://100.100.0.1:8053
